Calculator:

	GridLayout:
		rows: 4
		columns: 3
		Label:
			text: 'Enter your income'

		TextInput:
			id: income
			multiline: False
			write_tab: False
			input_type: 'number'
			input_filter: 'float'


		Label:
			text: 'Enter your partners income'

		TextInput:
			id: partner
			multiline: False
			write_tab: False
			input_type: 'number'
			input_filter: 'float'

		Label:
			text: 'Enter your expenses.\nYou can add expenses together using "+"\nExample: 5+5+5+5'

		TextInput:
			id: expenses
			multiline: False
			write_tab: False



		Button:
			text: 'Calculate'
			on_release: root.calculate()

		Button:
			text: 'Clear'
			on_release: root.clear()
